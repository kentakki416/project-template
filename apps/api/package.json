{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "db:generate": "dotenvx run -f .env.local -- prisma generate --schema=src/prisma/schema.prisma",
    "db:migrate": "dotenvx run -f .env.local -- prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:migrate:deploy": "dotenvx run -f .env.local -- prisma migrate deploy --schema=src/prisma/schema.prisma",
    "db:push": "dotenvx run -f .env.local -- prisma db push --schema=src/prisma/schema.prisma",
    "db:seed": "dotenvx run -f .env.local -- tsx src/prisma/seed.ts",
    "db:studio": "dotenvx run -f .env.local -- prisma studio --schema=src/prisma/schema.prisma",
    "dev": "dotenvx run -f .env.local -- ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "start": "dotenvx run -f .env.local -- node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@repo/api-schema": "workspace:^",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.2.0",
    "prisma": "^7.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
